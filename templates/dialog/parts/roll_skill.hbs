<div class="s7 flex-item norm-color">
    <label for="att-select">Skill</label>
    <select class="norm-color" name="selected_skill" id="selected_skill">
            {{#select selected_skill}}
            <option class="norm-color" value="none"></option>
            {{#each skills as |skill name|}}
            <option {{#ife ../skill name}}selected{{/ife}} class="norm-color" value="{{name}}">{{proper name}}</option>
            {{/each}}
            {{/select}}
    </select>
</div>