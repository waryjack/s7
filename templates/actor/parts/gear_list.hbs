 <div class="s7 flex-item inset">
             <h3 class="inv-header">
                <div>GEAR</div>
                        <a class="add-item" title="Add Gear" data-type="gear">
                            <i class="fas fa-plus-square"></i>
                        </a>
            </h3>
            <table class="item-table">
                <tr>
                        <th style="text-align:left;">Item</th>
                        <th>Roll (if any)</th>
                        <th>Rating</th>
                        <th>Quantity</th>
                        <th>Value Per</th>
                        
                        <th>Edit</th>
                </tr>
            {{#each gear as |gear name|}}
            {{log "Gear" gear}}
            <tr class="effect-toggle" style="text-align:center;">
                <td style="text-align:left;"><strong><a class="item-name item" data-item-id="{{gear._id}}">{{gear.name}}</a></strong></td>
                <td>{{#unless (eq gear.data.roll.attribute "none")}}{{proper gear.data.roll.attribute}} + {{proper gear.data.roll.skill}}{{/unless}}</td>
                <td>{{gear.data.rating}}</td>
                <td>{{gear.data.quantity}}</td>
                <td>{{gear.data.nuyen}}</td>
                <td><a class="item-edit item" data-item-id="{{gear._id}}"><i class="fas fa-edit"></i></a> <a class="item-delete item" data-item-id="{{gear._id}}"><i class='fas fa-trash'></i></a></td>
            </tr>
            <tr class="effect-info">
                <td colspan=6>{{gear.data.effect}}</td>
            </tr>
            {{/each}}
            </table>
    </div>