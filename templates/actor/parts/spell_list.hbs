    <div class="s7 flex-item inset">
            <h3 class="inv-header">
                <div>SPELLS</div>
                        <a class="add-item" title="Add Spell" data-type="spell">
                            <i class="fas fa-plus-square"></i>
                        </a>
            </h3>
            <table class="item-table">
                <tr>
                        <th></th>
                        <th style="text-align:left;">Spell</th>
                        <th>Category</th>
                        <th>Type</th>
                        <th>Range</th>
                        <th>Drain</th>
                        <th>Atk Rating</th>
                        <th>Dmg</th>
                        <th>Element</th>
                        <th>Roll</th>
                        <th>Edit</th>
                </tr>
            {{#each spells as |spell name|}}
            
            <tr class="effect-toggle" style="text-align:center;">
                <td><a title="Roll" class="item-roll weapon-image" data-item-id="{{spell._id}}"><img src="{{spell.img}}" height="24px" width="24px"/></td>
                <td style="text-align:left;"><strong><a class="item-name item" data-item-id="{{spell._id}}">{{spell.name}}</a></strong></td>
                <td>{{proper spell.data.category}}
                    {{#if (eq spell.data.category "combat")}}
                        ({{localize (concatStrings "S7.SpellModes." spell.data.mode)}})
                    {{/if}}
                </td>
                <td>{{proper spell.data.type}}</td>
                <td>{{spell.data.range}}</td>
                <td>{{spell.data.drain}}</td>
                <td>{{spell.data.attack_rating.close}}</td>
                <td>{{proper (initial spell.data.damage.dmgtype)}}</td>
                <td>{{proper (initial spell.data.damage.element)}}</td>
                <td>{{proper spell.data.roll.attribute}}+{{proper spell.data.roll.skill}}</td>
               
               <td><a class="item-edit item" data-item-id="{{spell._id}}"><i class="fas fa-edit"></i></a> <a class="item-delete item" data-item-id="{{spell._id}}"><i class='fas fa-trash'></i></a></td>
            </tr>
            <tr class="effect-info">
                <td colspan=10>
                    {{spell.data.effect}}
                </td>
            </tr>
            {{/each}}
            </table>
    </div>