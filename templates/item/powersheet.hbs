<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1 class="charname"><input style="color:white;" name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </header>

    <section class="sheet-body">
        
        <div class="s7 flexcol">
            <div class="s7 flexrow" style="align-items:flex-end">
                {{> "systems/s7/templates/item/parts/actionselect.hbs"}}
                <div class="s7 flex-item">
                    <label for="powlevel">Level</label><br/>
                    <input class="s7 value-input" style="width:4ch" id="powlevel" type="text" name="data.pp_cost" value="{{data.pp_cost}}" data-dtype="Number"/>
                </div>
                <div class="s7 flex-item">
                    <label for="powcost">PP/Lvl</label><br/>
                    <input class="s7 value-input" id="powcost" type="text" name="data.level" value="{{data.level}}" data-dtype="Number"/>
                </div>
                {{> "systems/s7/templates/item/parts/attributeselect.hbs"}}
                {{> "systems/s7/templates/item/parts/skillselect.hbs"}}
            </div>
            <div class="s7 flexrow">
                <div class="s7 flex-item">
                    <label for="poweffect">Effect</label>
                    <textarea id="poweffect" style="color:white;" name="data.effect">{{data.effect}}</textarea>
                </div>
            </div>
        </div>
    </section>
</form>

