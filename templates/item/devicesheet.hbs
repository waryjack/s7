<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1 class="charname"><input style="color:white;" name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </header>

    <section class="sheet-body">
        
        <div class="s7 flexcol">
            <div class="s7 flexrow">
               <div class="s7 flex-item">
                <table style="text-align:center;">
                    <tr>
                        <th>Device Rating</th>
                        <th>Attribute Array</th>
                        <th>Programs</th>
                        <th>Cost</th>
                    </tr>
                    <tr>
                        <td><input class="s7 value-input" type="text" name="data.rating" value="{{data.rating}}" data-dtype="Number"/></td>
                        <td><input class="s7 value-input" type="text" style="width:8ch" name="data.array" value="{{data.array}}" data-dtype="String"/></td>
                        <td><input class="s7 value-input" type="text" name="data.programs" value="{{data.programs}}" data-dtype="Number"/></td>
                        <td><input class="s7 value=input" style="width:10ch" type="text" name="data.nuyen" value="{{data.nuyen}}" data-dtype="Number"/></td>
                    </tr>
                </table>
               </div>
            </div>
        </div>
    </section>
</form>

