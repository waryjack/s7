<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1 class="charname"><input style="color:white;" name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </header>

    <section class="sheet-body">
        
        <div class="s7 flexcol">
            <div class="s7 flexrow">
                <div class="s7 flex-item">
                    <table>
                        <tr class="wtext">
                            <th>Category</th>
                            <th>Type</th>
                            <th>Mode</th>
                            <th>Range</th>
                            <th>Drain</th>
                        </tr>
                        <tr style="text-align:center">
                            <td>
                                {{> "systems/s7/templates/item/parts/spellcategoryselect.hbs"}}
                            </td>
                            <td>
                                {{> "systems/s7/templates/item/parts/spelltypeselect.hbs"}}
                            </td>
                            <td>
                                {{> "systems/s7/templates/item/parts/spellmodeselect.hbs"}}
                            </td>
                            <td>
                                <input class="s7 value-input" style="width:8ch" type="text" name="data.range" value="{{data.range}}" data-dtype="String"/>
                            </td>
                            <td>
                                <input class="s7 value-input" type="text" name="data.drain" value="{{data.drain}}" data-dtype="Number"/>
                            </td>
                        </tr>
                        <tr>
                            <th colspan=2>Attack Rating</th>
                            <th>Damage Type</th>
                            <th>Element</th>
                        </tr>
                        <tr>
                            <td colspan=2 style="text-align:center">
                            
                                <input class="s7 value-input" type="text" name="data.attack_rating.close" value="{{data.attack_rating.close}}" data-dtype="Number"/>
                               
                            </td>
                            <td>
                                {{> "systems/s7/templates/item/parts/damageselect.hbs"}}
                            </td>
                            <td>
                                {{> "systems/s7/templates/item/parts/elementselect.hbs"}}
                            </td>
                        </tr>
                        <tr>
                            <td colspan=4>
                                <h3>Description</h3>
                                <textarea style="color:white;" name="data.effect">{{data.effect}}</textarea>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

        </div>
        <div class="s7 flexcol">
            <div class="s7 flexrow">
                <h3 class="wtext">Roll Information</h3>
            </div>
            <div class="s7 flexrow">
                 
                 {{> "systems/s7/templates/item/parts/attributeselect.hbs"}}
                 {{> "systems/s7/templates/item/parts/skillselect.hbs"}}
            </div>
        </div>
    </section>
</form>

